doctype html
html(lang=fr)
  head
    title #{nom}
    meta(charset="UTF-8")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css")
    script(src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous")
   
    body.ui.container
        div.ui.compact.menu
        h1 Catalogue des produits dans la catégorie Raspberry
        table.ui.basic.table 
          thead 
           tr 
            th Désignation des composant 
            th Quantié
            th Prix 
          tbody 
           
           each e in panier
            -var t = e.prix * e.qte


            tr 
             td #{e.nom}
             td #{e.qte}
             td #{t} €
             
          tfoot
           tr 
            th
            th
            th
              h2 #{total} €
        a(href="/") Continuer mes achats